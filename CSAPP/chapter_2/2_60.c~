#include<stdio.h>

unsigned replace_byte(int a, char b, int i){
  union test{
    int k;
    char g[4];
  };
  union test t;

  t.k = a;
  t.g[i] = b;
  
  return t.k;
}

void main(){
  int *a;
  char *b;
  int i;
  
  printf("please enter a, b in hex and c in int\n");
  scanf("%i%i%d",&a,&b,&i);
  
  printf("the result is %.8x\n", replace_byte(a,b,i));
}
